<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="200dp"
    android:layout_marginRight="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/home_movie_item_card"
        android:layout_width="100dp"
        android:layout_height="130dp"
        app:cardCornerRadius="10dp"

        > <!-- Adjust the corner radius as needed -->

        <ImageView
            android:id="@+id/item_movie_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_movie_item_card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginRight="20dp"
        android:scaleType="centerCrop"
        android:text="Jurasic World WorldWorld World  WorldWorldWorldWorldWorldWorld"
        android:textColor="@color/colorMediumBlack" />

    <TextView
        android:id="@+id/item_movie_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/item_movie_name"
        android:scaleType="centerCrop"
        android:text="1h 12m"

        android:textColor="@color/colorMediumBlack"
         />
</RelativeLayout>
