<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.ForgotPasswordActivity"
    android:background="@drawable/login_background"

    >
    <TextView
        android:id="@+id/reg_regis_text"
        android:fontFamily="@font/roboto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Register"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reg_reg_small_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_regis_text"
        android:layout_centerHorizontal="true"
        android:text="Sign up for your new account"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/reg_email_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/reg_reg_small_text"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="100dp"

        android:hint="Email"
        android:inputType="textEmailAddress" />
    <EditText
        android:id="@+id/reg_name_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/reg_email_input"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Your name"
        android:inputType="textEmailAddress" />
    <EditText
        android:id="@+id/reg_password_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"

        android:layout_below="@id/reg_name_input"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/cf_password_input_field"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"

        android:layout_below="@id/reg_password_input"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Confirm password"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/reg_reg_button"
        android:background="@drawable/rounded_button_background"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/cf_password_input_field"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="100dp"
        android:text="Register"
        android:textColor="#FFFFFF" />
    <TextView
        android:id="@+id/reg_sign_text_head"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_reg_button"
        android:layout_centerHorizontal="true"
        android:text="Already have an account, "
        android:textSize="16sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/reg_sign_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_reg_button"
        android:layout_toEndOf="@id/reg_sign_text_head"
        android:text="Sign in"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary" />
</RelativeLayout>