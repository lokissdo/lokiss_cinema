<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.LoginActivity"
    android:background="@drawable/login_background"
    >
    <TextView
        android:id="@+id/login_text"
        android:fontFamily="@font/roboto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Login"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sign_in_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_text"
        android:layout_centerHorizontal="true"
        android:text="Sign in to your account to continue"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/email_input_field"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/sign_in_text"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:hint="Email"

        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password_input_field"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"

        android:layout_below="@id/email_input_field"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/forgot_password_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_input_field"
        android:layout_alignEnd="@id/password_input_field"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="Forgot password?"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/sign_in_button"
        android:background="@drawable/rounded_button_background"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/forgot_password_link"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="190dp"

        android:text="Sign in"
        android:textColor="#FFFFFF" />
    <TextView
        android:id="@+id/register_text_head"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_in_button"
        android:layout_centerHorizontal="true"
        android:text="Not have an account, "
        android:textSize="16sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/register_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_in_button"
        android:layout_toEndOf="@id/register_text_head"
        android:text="Register"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary" />
</RelativeLayout>